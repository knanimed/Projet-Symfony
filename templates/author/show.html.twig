{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ author.surname }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2">
        <a class="btn btn-warning" href="{{ path('app_author_edit', {'id': author.id}) }}">edit</a>
        {{ include('author/_delete_form.html.twig') }}
    </div>

    <a class="btn btn-outline-dark mt-2" href="{{ path('app_author_index') }}">back to list</a>

{% endblock %}
