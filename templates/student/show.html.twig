{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ student.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ student.surname }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2">
        <a class="btn btn-warning" href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>
        <a class="btn btn-outline-dark" href="{{ path('app_student_index') }}">back to list</a>
    </div>


    {{ include('student/_delete_form.html.twig') }}
{% endblock %}
